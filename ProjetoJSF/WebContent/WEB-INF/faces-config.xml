<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">

	<navigation-rule>
		<from-view-id>*</from-view-id>
		
		<navigation-case>
			<from-outcome>menuprincipal</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>

		<navigation-case>
			<from-outcome>cadastro</from-outcome>
			<to-view-id>/livro/cadastroLivros.xhtml</to-view-id>
		</navigation-case>
		
		<navigation-case>
			<from-outcome>listagem</from-outcome>
			<to-view-id>/livro/listagemLivros.xhtml</to-view-id>
		</navigation-case>
		
		<navigation-case>
			<from-outcome>locacao</from-outcome>
			<to-view-id>/locacao/locacaoLivros.xhtml</to-view-id>
		</navigation-case>
		
		<navigation-case>
			<from-outcome>cliente</from-outcome>
			<to-view-id>/cliente/clientes.xhtml</to-view-id>
		</navigation-case>
		
		<navigation-case>
			<from-outcome>listagemLocacao</from-outcome>
			<to-view-id>/locacao/listagemLocacao.xhtml</to-view-id>
		</navigation-case>
		
	</navigation-rule>

</faces-config>
